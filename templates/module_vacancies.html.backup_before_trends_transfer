{% block extra_scripts %}
<script>
console.log('üöÄ –ú–æ–¥—É–ª—å –≤–∞–∫–∞–Ω—Å–∏–π –∑–∞–≥—Ä—É–∂–µ–Ω');

// –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è –∫–∞–∂–¥–æ–π –º–æ–¥–µ–ª–∏ ElevenLabs
const MODEL_SETTINGS = {
    'eleven_flash_v2_5': {
        stability: 0.5,
        similarity: 0.75,
        speed: 1.0,
        description: '–ë—ã—Å—Ç—Ä–∞—è –≥–µ–Ω–µ—Ä–∞—Ü–∏—è, —Å—Ä–µ–¥–Ω–µ–µ –∫–∞—á–µ—Å—Ç–≤–æ'
    },
    'eleven_multilingual_v2': {
        stability: 0.5,
        similarity: 0.5,
        speed: 1.0,
        description: '29 —è–∑—ã–∫–æ–≤, –≤—ã—Å–æ–∫–æ–µ –∫–∞—á–µ—Å—Ç–≤–æ'
    },
    'eleven_turbo_v2_5': {
        stability: 0.6,
        similarity: 0.7,
        speed: 1.0,
        description: '–°–±–∞–ª–∞–Ω—Å–∏—Ä–æ–≤–∞–Ω–Ω–∞—è —Å–∫–æ—Ä–æ—Å—Ç—å –∏ –∫–∞—á–µ—Å—Ç–≤–æ'
    }
};

// –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –Ω–∞—Å—Ç—Ä–æ–µ–∫ –ø—Ä–∏ –≤—ã–±–æ—Ä–µ –º–æ–¥–µ–ª–∏
function updateModelSettings() {
    const modelSelect = document.getElementById('modelSelect');
    const selectedModel = modelSelect.value;
    const settings = MODEL_SETTINGS[selectedModel];
    
    if (settings) {
        console.log(`üéõÔ∏è –ü—Ä–∏–º–µ–Ω—è–µ–º –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –¥–ª—è –º–æ–¥–µ–ª–∏ ${selectedModel}:`, settings);
        
        // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ª–∞–π–¥–µ—Ä—ã
        document.getElementById('stabilitySlider').value = settings.stability;
        document.getElementById('stabilityValue').textContent = settings.stability;
        
        document.getElementById('similaritySlider').value = settings.similarity;
        document.getElementById('similarityValue').textContent = settings.similarity;
        
        document.getElementById('speedSlider').value = settings.speed;
        document.getElementById('speedValue').textContent = settings.speed;
        
        console.log(`‚úÖ –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –º–æ–¥–µ–ª–∏ ${selectedModel} –ø—Ä–∏–º–µ–Ω–µ–Ω—ã`);
    }
}

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
document.addEventListener('DOMContentLoaded', function() {
    updateModelSettings();
});

// –§—É–Ω–∫—Ü–∏—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Å—Ç–∞—Ç—É—Å–∞
function showStatus(message, type) {
    const status = document.getElementById('parseStatus');
    const alertClass = type === 'success' ? 'alert-success' : type === 'error' ? 'alert-danger' : 'alert-info';
    status.innerHTML = `<div class="alert ${alertClass}">${message}</div>`;
}

// –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ —Ç–µ–∫—Å—Ç–∞
function updateTextStats() {
    const textarea = document.getElementById('editableText');
    const statsDiv = document.getElementById('textStats');
    if (!textarea || !statsDiv) return;
    
    const text = textarea.value;
    const charCount = text.length;
    
    // –ü—Ä–∏–º–µ—Ä–Ω–æ–µ –≤—Ä–µ–º—è: 150-180 —Å–∏–º–≤–æ–ª–æ–≤ –≤ –º–∏–Ω—É—Ç—É, –±–µ—Ä–µ–º —Å—Ä–µ–¥–Ω–µ–µ 165
    const secondsEstimate = Math.ceil((charCount / 165) * 60);
    const minutes = Math.floor(secondsEstimate / 60);
    const seconds = secondsEstimate % 60;
    
    let timeText = '';
    if (minutes > 0) {
        timeText = `~${minutes} –º–∏–Ω ${seconds} —Å–µ–∫`;
    } else {
        timeText = `~${seconds} —Å–µ–∫`;
    }
    
    statsDiv.textContent = `–°–∏–º–≤–æ–ª–æ–≤: ${charCount} | –ü—Ä–∏–º–µ—Ä–Ω–æ–µ –≤—Ä–µ–º—è: ${timeText}`;
}

// –ó–∞–≥—Ä—É–∑–∫–∞ –≤–∞–∫–∞–Ω—Å–∏–π –∏–∑ Google Sheets
function loadVacancies() {
    console.log('üîÑ –ó–∞–≥—Ä—É–∂–∞–µ–º –≤–∞–∫–∞–Ω—Å–∏–∏ –∏–∑ Google Sheets...');
    const url = document.getElementById('sheetUrl').value;
    if (!url) {
        alert('–í–≤–µ–¥–∏—Ç–µ URL Google Sheets');
        return;
    }
    
    // –ù–û–í–û–ï: –≤—ã–±–æ—Ä –º–µ—Ç–æ–¥–∞
    const method = document.querySelector('input[name="parsingMethod"]:checked').value;
    const endpoint = method === 'direct' ? '/api/vacancies/parse-direct' : '/api/vacancies/parse';
    console.log(`üîß –ò—Å–ø–æ–ª—å–∑—É–µ–º –º–µ—Ç–æ–¥: ${method}, endpoint: ${endpoint}`);
    
    showStatus('–ó–∞–≥—Ä—É–∂–∞–µ–º –≤–∞–∫–∞–Ω—Å–∏–∏...', 'info');
    
    fetch(endpoint, {  // –ò—Å–ø–æ–ª—å–∑—É–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π endpoint
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ url: url })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showStatus(`‚úÖ –ó–∞–≥—Ä—É–∂–µ–Ω–æ ${data.count} –≤–∞–∫–∞–Ω—Å–∏–π (${method})`, 'success');
            displayVacancies(data.vacancies);
        } else {
            showStatus('‚ùå –û—à–∏–±–∫–∞: ' + data.error, 'error');
        }
    })
    .catch(error => {
        console.error('‚ùå –û—à–∏–±–∫–∞:', error);
        showStatus('‚ùå –û—à–∏–±–∫–∞: ' + error.message, 'error');
    });
}

// –ó–∞–≥—Ä—É–∑–∫–∞ CSV —Ñ–∞–π–ª–∞
function loadCsv() {
    console.log('üîÑ –ó–∞–≥—Ä—É–∂–∞–µ–º CSV —Ñ–∞–π–ª...');
    const fileInput = document.getElementById('csvFile');
    const file = fileInput.files[0];
    
    if (!file) {
        alert('–í—ã–±–µ—Ä–∏—Ç–µ CSV —Ñ–∞–π–ª');
        return;
    }
    
    showStatus('–ó–∞–≥—Ä—É–∂–∞–µ–º CSV...', 'info');
    
    const formData = new FormData();
    formData.append('file', file);
    
    fetch('/api/vacancies/upload-csv', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showStatus(`‚úÖ –ó–∞–≥—Ä—É–∂–µ–Ω–æ ${data.count} –≤–∞–∫–∞–Ω—Å–∏–π –∏–∑ CSV`, 'success');
            displayVacancies(data.vacancies);
        } else {
            showStatus('‚ùå –û—à–∏–±–∫–∞: ' + data.error, 'error');
        }
    })
    .catch(error => {
        console.error('‚ùå –û—à–∏–±–∫–∞:', error);
        showStatus('‚ùå –û—à–∏–±–∫–∞: ' + error.message, 'error');
    });
}


// –û—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ —Å–ø–∏—Å–∫–∞ –≤–∞–∫–∞–Ω—Å–∏–π
function displayVacancies(vacancies) {
    console.log('üìã –û—Ç–æ–±—Ä–∞–∂–∞–µ–º –≤–∞–∫–∞–Ω—Å–∏–∏:', vacancies);
    
    const container = document.getElementById('vacanciesList');
    container.innerHTML = '';
    
    vacancies.forEach((vacancy, index) => {
        const card = document.createElement('div');
        card.className = 'col-md-6';
        card.innerHTML = `
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title gsr-text-primary">${vacancy.position}</h5>
                    <p class="card-text"><strong>–ö–æ–º–ø–∞–Ω–∏—è:</strong> ${vacancy.company}</p>
                    <p class="card-text"><strong>–õ–æ–∫–∞—Ü–∏—è:</strong> ${vacancy.location}</p>
                    <p class="card-text"><strong>–ó–∞—Ä–ø–ª–∞—Ç–∞:</strong> ${vacancy.salary}</p>
                    <button class="btn btn-gsr-accent" onclick="selectVacancy(${index})">
                        <i class="fas fa-check me-2"></i>–í—ã–±—Ä–∞—Ç—å
                    </button>
                </div>
            </div>
        `;
        container.appendChild(card);
    });
    
    // –ê–ö–¢–ò–í–ò–†–£–ï–ú –®–ê–ì 2
    console.log('‚úÖ –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —à–∞–≥ 2');
    const step2 = document.getElementById('step2');
    step2.classList.remove('step-disabled');
    step2.classList.add('step-active');
    
    // –ü–ª–∞–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª –∫ —à–∞–≥—É 2
    setTimeout(() => {
        step2.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }, 300);
    
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤–∞–∫–∞–Ω—Å–∏–∏ –≤ –≥–ª–æ–±–∞–ª—å–Ω—É—é –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é
    window.currentVacancies = vacancies;
}

// –í—ã–±–æ—Ä –≤–∞–∫–∞–Ω—Å–∏–∏
function selectVacancy(index) {
    console.log('‚úÖ –í—ã–±—Ä–∞–Ω–∞ –≤–∞–∫–∞–Ω—Å–∏—è:', index);
    const vacancy = window.currentVacancies[index];
    
    // –ó–∞–ø–æ–ª–Ω—è–µ–º —Ç–µ–∫—Å—Ç –¥–ª—è –≤–∏–¥–µ–æ
    document.getElementById('videoText').value = `–í–∞–∫–∞–Ω—Å–∏—è: ${vacancy.position}\n–ö–æ–º–ø–∞–Ω–∏—è: ${vacancy.company}\n–õ–æ–∫–∞—Ü–∏—è: ${vacancy.location}\n–ó–∞—Ä–ø–ª–∞—Ç–∞: ${vacancy.salary}`;
    
    // –ê–ö–¢–ò–í–ò–†–£–ï–ú –®–ê–ì 3
    console.log('‚úÖ –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —à–∞–≥ 3');
    const step3 = document.getElementById('step3');
    step3.classList.remove('step-disabled');
    step3.classList.add('step-active');
    
    // –ü–ª–∞–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª –∫ —à–∞–≥—É 3
    setTimeout(() => {
        step3.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }, 300);
    
    showStatus('‚úÖ –í–∞–∫–∞–Ω—Å–∏—è –≤—ã–±—Ä–∞–Ω–∞', 'success');
    
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤—ã–±—Ä–∞–Ω–Ω—É—é –≤–∞–∫–∞–Ω—Å–∏—é
    window.selectedVacancy = vacancy;
}

// –ì–µ–Ω–µ—Ä–∞—Ü–∏—è —Ç–µ–∫—Å—Ç–∞
function generateText() {
    console.log('üîÑ –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Ç–µ–∫—Å—Ç...');
    
    if (!window.selectedVacancy) {
        alert('–°–Ω–∞—á–∞–ª–∞ –≤—ã–±–µ—Ä–∏—Ç–µ –≤–∞–∫–∞–Ω—Å–∏—é');
        return;
    }
    
    const textStatus = document.getElementById('textStatus');
    textStatus.innerHTML = '<div class="alert alert-info">–ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º —Ç–µ–∫—Å—Ç —Å –ø–æ–º–æ—â—å—é –ò–ò...</div>';
    
    fetch('/api/vacancies/generate-text', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ vacancy: window.selectedVacancy })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('videoText').value = data.text;
            textStatus.innerHTML = '<div class="alert alert-success">‚úÖ –¢–µ–∫—Å—Ç —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω</div>';
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ä–µ–¥–∞–∫—Ç–∏—Ä—É–µ–º–æ–µ –ø–æ–ª–µ –¥–ª—è –∞—É–¥–∏–æ
            document.getElementById('editableText').value = data.text;
            document.getElementById('editableTextSection').style.display = 'block';
            updateTextStats();
        } else {
            textStatus.innerHTML = '<div class="alert alert-danger">‚ùå –û—à–∏–±–∫–∞: ' + data.error + '</div>';
        }
    })
    .catch(error => {
        console.error('‚ùå –û—à–∏–±–∫–∞:', error);
        textStatus.innerHTML = '<div class="alert alert-danger">‚ùå –û—à–∏–±–∫–∞: ' + error.message + '</div>';
    });
}

// –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∞—É–¥–∏–æ
async function generateAudio() {
    console.log('üéµ –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∞—É–¥–∏–æ —á–µ—Ä–µ–∑ ElevenLabs...');
    
    // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—Å—Ç –∏–∑ —Ä–µ–¥–∞–∫—Ç–∏—Ä—É–µ–º–æ–≥–æ –ø–æ–ª—è
    const text = document.getElementById('editableText').value;
    
    if (!text || text.trim() === '') {
        alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ —Ç–µ–∫—Å—Ç –¥–ª—è –æ–∑–≤—É—á–∫–∏');
        return;
    }
    
    // –ü–æ–ª—É—á–∞–µ–º –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
    const voiceId = document.getElementById('voiceSelect')?.value || 'jP9L6ZC55cz5mmx4ZpCk';
    const modelId = document.getElementById('modelSelect')?.value || 'eleven_flash_v2_5';
    const stability = parseFloat(document.getElementById('stabilitySlider')?.value || 0.5);
    const similarity = parseFloat(document.getElementById('similaritySlider')?.value || 0.5);
    const speed = parseFloat(document.getElementById('speedSlider')?.value || 1.0);
    const useAdvanced = document.getElementById('useAdvanced')?.checked || false;
    
    const statusDiv = document.getElementById('audioStatus');
    statusDiv.innerHTML = '<div class="alert alert-info"><i class="fas fa-spinner fa-spin me-2"></i>–°–æ–∑–¥–∞–µ–º –∞—É–¥–∏–æ —á–µ—Ä–µ–∑ ElevenLabs API...</div>';
    
    try {
        const response = await fetch('/api/vacancies/generate-audio', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                text: text,
                voice_id: voiceId,
                model_id: modelId,
                stability: stability,
                similarity_boost: similarity,
                speed: speed,
                use_advanced: useAdvanced
            })
        });
        
        const result = await response.json();
        
        if (result.success) {
            statusDiv.innerHTML = '<div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>‚úÖ –ê—É–¥–∏–æ —Å–æ–∑–¥–∞–Ω–æ ElevenLabs!</div>';
            
            // –°–æ—Ö—Ä–∞–Ω—è–µ–º URL –∞—É–¥–∏–æ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –≤ –≤–∏–¥–µ–æ
            if (result.audio_url.startsWith('http')) {
                window.generatedAudioUrl = result.audio_url;
            } else {
                window.generatedAudioUrl = window.location.origin + result.audio_url;
            }
            
            console.log('üîó Audio URL –¥–ª—è HeyGen:', window.generatedAudioUrl);
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∞—É–¥–∏–æ –ø–ª–µ–µ—Ä
            document.getElementById('audioResult').style.display = 'block';
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º Plyr –ø–ª–µ–µ—Ä
            initializePlyrPlayer(result.audio_url);
        } else {
            statusDiv.innerHTML = `<div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>‚ùå –û—à–∏–±–∫–∞: ${result.message}</div>`;
        }
    } catch (error) {
        console.error('‚ùå –û—à–∏–±–∫–∞:', error);
        statusDiv.innerHTML = `<div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>‚ùå –û—à–∏–±–∫–∞: ${error.message}</div>`;
    }
}

// –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –≤–∏–¥–µ–æ —á–µ—Ä–µ–∑ HeyGen
async function generateVideo() {
    console.log('üé¨ ===== –ì–ï–ù–ï–†–ê–¶–ò–Ø –í–ò–î–ï–û HEYGEN =====');
    
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–ª–∏—á–∏–µ –∞—É–¥–∏–æ URL
    if (!window.generatedAudioUrl) {
        alert('‚ùå –°–Ω–∞—á–∞–ª–∞ —Å–≥–µ–Ω–µ—Ä–∏—Ä—É–π—Ç–µ –∞—É–¥–∏–æ!');
        console.error('‚ùå window.generatedAudioUrl –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω');
        return;
    }
    
    console.log('üîó –ò—Å–ø–æ–ª—å–∑—É–µ–º audio URL:', window.generatedAudioUrl);
    
    const statusDiv = document.getElementById('videoStatus');
    if (!statusDiv) {
        console.error('‚ùå –≠–ª–µ–º–µ–Ω—Ç videoStatus –Ω–µ –Ω–∞–π–¥–µ–Ω');
        return;
    }
    
    statusDiv.innerHTML = '<div class="alert alert-info"><i class="fas fa-spinner fa-spin me-2"></i>–ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º –≤–∏–¥–µ–æ —Å –ø–æ–º–æ—â—å—é HeyGen...</div>';
    
    try {
        const response = await fetch('/api/vacancies/generate-video', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                audio_url: window.generatedAudioUrl,
                avatar_id: 'default_avatar'
            })
        });
        
        console.log('üì° HTTP Status:', response.status);
        
        const result = await response.json();
        console.log('üì¶ –û—Ç–≤–µ—Ç:', result);
        
        if (result.success) {
            if (result.video_id) {
                console.log('‚úÖ –ü–æ–ª—É—á–µ–Ω video_id:', result.video_id);
                statusDiv.innerHTML = `<div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>‚úÖ –í–∏–¥–µ–æ —Å–æ–∑–¥–∞–µ—Ç—Å—è! ID: ${result.video_id}</div>`;
                
                // TODO: –î–æ–±–∞–≤–∏—Ç—å polling —Å—Ç–∞—Ç—É—Å–∞ –≤–∏–¥–µ–æ
                window.currentVideoId = result.video_id;
                
            } else if (result.video_url) {
                console.log('‚úÖ –ü–æ–ª—É—á–µ–Ω video_url:', result.video_url);
                statusDiv.innerHTML = '<div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>‚úÖ –í–∏–¥–µ–æ –≥–æ—Ç–æ–≤–æ!</div>';
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≤–∏–¥–µ–æ
                document.getElementById('videoResult').style.display = 'block';
                const videoElement = document.getElementById('videoPlayer');
                const videoSource = document.getElementById('videoSource');
                videoSource.src = result.video_url;
                videoElement.load();
            }
            
            if (result.warning) {
                console.warn('‚ö†Ô∏è –ü—Ä–µ–¥—É–ø—Ä–µ–∂–¥–µ–Ω–∏–µ:', result.warning);
            }
        } else {
            throw new Error(result.message || '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞');
        }
    } catch (error) {
        console.error('‚ùå –û—à–∏–±–∫–∞ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –≤–∏–¥–µ–æ:', error);
        statusDiv.innerHTML = `<div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>‚ùå –û—à–∏–±–∫–∞: ${error.message}</div>`;
    }
    
    console.log('üé¨ ===== –ö–û–ù–ï–¶ –ì–ï–ù–ï–†–ê–¶–ò–ò –í–ò–î–ï–û =====');
}

// –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Plyr –ø–ª–µ–µ—Ä–∞ —Å –ø–æ–ª–Ω—ã–º –ª–æ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ–º
function initializePlyrPlayer(audioUrl) {
    console.log('üéµ ===== –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–Ø PLYR –ü–õ–ï–ï–†–ê =====');
    console.log('üì• –í—Ö–æ–¥—è—â–∏–π URL:', audioUrl);
    
    // –ü—Ä–æ–≤–µ—Ä–∫–∞ URL
    if (!audioUrl) {
        console.error('‚ùå –ü—É—Å—Ç–æ–π URL –∞—É–¥–∏–æ');
        alert('–û—à–∏–±–∫–∞: –Ω–µ –ø–æ–ª—É—á–µ–Ω URL –∞—É–¥–∏–æ');
        return;
    }
    
    // –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω—ã–π –ø—É—Ç—å –≤ –ø–æ–ª–Ω—ã–π HTTP URL
    let fullAudioUrl = audioUrl;
    if (!audioUrl.startsWith('http')) {
        fullAudioUrl = window.location.origin + audioUrl;
    }
    console.log('üîó –ü–æ–ª–Ω—ã–π HTTP URL:', fullAudioUrl);
    
    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–ª—è HeyGen
    window.generatedAudioUrl = fullAudioUrl;
    console.log('üíæ –°–æ—Ö—Ä–∞–Ω–µ–Ω –¥–ª—è HeyGen:', window.generatedAudioUrl);
    
    // –ü–æ–ª—É—á–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã
    const audioElement = document.getElementById('audioPlayer');
    const audioSource = document.getElementById('audioSource');
    const audioUrlDisplay = document.getElementById('audioUrlDisplay');
    
    if (!audioElement || !audioSource) {
        console.error('‚ùå –≠–ª–µ–º–µ–Ω—Ç—ã –∞—É–¥–∏–æ –ø–ª–µ–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã');
        alert('–û—à–∏–±–∫–∞: —ç–ª–µ–º–µ–Ω—Ç—ã –ø–ª–µ–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ');
        return;
    }
    
    // –û—Ç–æ–±—Ä–∞–∂–∞–µ–º URL
    if (audioUrlDisplay) {
        audioUrlDisplay.textContent = fullAudioUrl;
    }
    
    // –£–Ω–∏—á—Ç–æ–∂–∞–µ–º —Å—Ç–∞—Ä—ã–π Plyr –ø–ª–µ–µ—Ä –µ—Å–ª–∏ –µ—Å—Ç—å
    if (window.plyrPlayer) {
        console.log('üóëÔ∏è –£–Ω–∏—á—Ç–æ–∂–∞–µ–º —Å—Ç–∞—Ä—ã–π Plyr –ø–ª–µ–µ—Ä');
        try {
            if (typeof window.plyrPlayer.destroy === 'function') {
                window.plyrPlayer.destroy();
            }
        } catch (e) {
            console.warn('‚ö†Ô∏è –û—à–∏–±–∫–∞ –ø—Ä–∏ —É–Ω–∏—á—Ç–æ–∂–µ–Ω–∏–∏ —Å—Ç–∞—Ä–æ–≥–æ –ø–ª–µ–µ—Ä–∞:', e);
        }
        window.plyrPlayer = null;
    }
    
    // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏—Å—Ç–æ—á–Ω–∏–∫
    console.log('üîÑ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏—Å—Ç–æ—á–Ω–∏–∫ –∞—É–¥–∏–æ...');
    audioSource.src = fullAudioUrl;
    audioElement.src = fullAudioUrl;
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π –∑–∞–≥—Ä—É–∑–∫–∏
    audioElement.onloadstart = function() {
        console.log('üì• –ù–∞—á–∏–Ω–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É –∞—É–¥–∏–æ...');
    };
    
    audioElement.onprogress = function() {
        console.log('üìä –ü—Ä–æ–≥—Ä–µ—Å—Å –∑–∞–≥—Ä—É–∑–∫–∏ –∞—É–¥–∏–æ...');
    };
    
    audioElement.onloadedmetadata = function() {
        console.log('‚úÖ –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ –∑–∞–≥—Ä—É–∂–µ–Ω—ã!');
        console.log('‚è±Ô∏è –î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:', audioElement.duration, '—Å–µ–∫');
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä—É–µ–º Plyr –ü–û–°–õ–ï –∑–∞–≥—Ä—É–∑–∫–∏ –º–µ—Ç–∞–¥–∞–Ω–Ω—ã—Ö
        try {
            console.log('üé® –°–æ–∑–¥–∞–µ–º Plyr –ø–ª–µ–µ—Ä...');
            
            window.plyrPlayer = new Plyr(audioElement, {
                controls: [
                    'play-large',
                    'play',
                    'progress',
                    'current-time',
                    'duration',
                    'mute',
                    'volume',
                    'download'
                ],
                settings: [],
                autoplay: false,
                volume: 0.8,
                hideControls: false,
                clickToPlay: true,
                keyboard: { focused: true, global: true },
                tooltips: { controls: true, seek: true }
            });
            
            console.log('‚úÖ Plyr –ø–ª–µ–µ—Ä —Å–æ–∑–¥–∞–Ω —É—Å–ø–µ—à–Ω–æ');
            
            // –°–æ–±—ã—Ç–∏—è Plyr
            window.plyrPlayer.on('ready', () => {
                console.log('‚úÖ Plyr –≥–æ—Ç–æ–≤ –∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—é');
            });
            
            window.plyrPlayer.on('play', () => {
                console.log('‚ñ∂Ô∏è –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –Ω–∞—á–∞–ª–æ—Å—å');
            });
            
            window.plyrPlayer.on('pause', () => {
                console.log('‚è∏Ô∏è –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –ø—Ä–∏–æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–æ');
            });
            
            window.plyrPlayer.on('ended', () => {
                console.log('‚èπÔ∏è –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –∑–∞–≤–µ—Ä—à–µ–Ω–æ');
            });
            
            window.plyrPlayer.on('error', (event) => {
                console.error('‚ùå –û—à–∏–±–∫–∞ Plyr –ø–ª–µ–µ—Ä–∞:', event);
            });
            
        } catch (error) {
            console.error('‚ùå –û—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ Plyr:', error);
            alert('–û—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ –ø–ª–µ–µ—Ä–∞: ' + error.message);
        }
    };
    
    audioElement.oncanplaythrough = function() {
        console.log('‚úÖ –ê—É–¥–∏–æ –ø–æ–ª–Ω–æ—Å—Ç—å—é –∑–∞–≥—Ä—É–∂–µ–Ω–æ –∏ –≥–æ—Ç–æ–≤–æ –∫ –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏—é');
    };
    
    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –æ—à–∏–±–æ–∫
    audioElement.onerror = function(e) {
        console.error('‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∞—É–¥–∏–æ:', e);
        console.error('‚ùå URL –∫–æ—Ç–æ—Ä—ã–π –Ω–µ –∑–∞–≥—Ä—É–∑–∏–ª—Å—è:', fullAudioUrl);
        console.error('‚ùå –ö–æ–¥ –æ—à–∏–±–∫–∏:', audioElement.error?.code);
        console.error('‚ùå –°–æ–æ–±—â–µ–Ω–∏–µ –æ—à–∏–±–∫–∏:', audioElement.error?.message);
        
        // –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å —Ñ–∞–π–ª–∞
        console.log('üîç –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å —Ñ–∞–π–ª–∞...');
        fetch(fullAudioUrl, { method: 'HEAD' })
            .then(response => {
                console.log('üì° HTTP Status:', response.status);
                console.log('üì° Headers:', [...response.headers.entries()]);
                if (!response.ok) {
                    console.error('‚ùå –§–∞–π–ª –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω, —Å—Ç–∞—Ç—É—Å:', response.status);
                    alert(`–û—à–∏–±–∫–∞: —Ñ–∞–π–ª –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω (HTTP ${response.status})`);
                } else {
                    console.log('‚úÖ –§–∞–π–ª –¥–æ—Å—Ç—É–ø–µ–Ω –ø–æ HTTP, –Ω–æ –Ω–µ –∑–∞–≥—Ä—É–∂–∞–µ—Ç—Å—è –≤ –ø–ª–µ–µ—Ä');
                    console.log('üí° –í–æ–∑–º–æ–∂–Ω—ã–µ –ø—Ä–∏—á–∏–Ω—ã: CORS, –Ω–µ–≤–µ—Ä–Ω—ã–π MIME-type, –ø–æ–≤—Ä–µ–∂–¥–µ–Ω–Ω—ã–π —Ñ–∞–π–ª');
                    alert('–§–∞–π–ª –¥–æ—Å—Ç—É–ø–µ–Ω, –Ω–æ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Ñ–æ—Ä–º–∞—Ç —Ñ–∞–π–ª–∞.');
                }
            })
            .catch(err => {
                console.error('‚ùå –û—à–∏–±–∫–∞ –ø—Ä–æ–≤–µ—Ä–∫–∏ —Ñ–∞–π–ª–∞:', err);
                alert('–û—à–∏–±–∫–∞ –¥–æ—Å—Ç—É–ø–∞ –∫ —Ñ–∞–π–ª—É: ' + err.message);
            });
    };
    
    // –ó–∞–ø—É—Å–∫–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
    console.log('üöÄ –ó–∞–ø—É—Å–∫–∞–µ–º load()...');
    audioElement.load();
    console.log('üéµ ===== –ö–û–ù–ï–¶ –ò–ù–ò–¶–ò–ê–õ–ò–ó–ê–¶–ò–ò =====');
}
</script>
{% endblock %}
